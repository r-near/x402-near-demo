# NEAR network
NEAR_NETWORK=testnet
NEAR_RPC=https://rpc.testnet.near.org

# NEP-141 token account ID (on testnet) - USDC with 6 decimals
TOKEN_ACCOUNT_ID=<your_token_contract_id>

# Seller revenue account (must be storage-registered on TOKEN_ACCOUNT_ID)
SELLER_ACCOUNT_ID=<seller>.testnet

# Relayer (funded with NEAR for gas)
RELAYER_ACCOUNT_ID=<relayer>.testnet
RELAYER_PRIVATE_KEY=ed25519:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# --- PRICE LIVES WITH THE SELLER ---
# Price in token atomic units - USDC has 6 decimals, so 10000 = 0.01 USDC
PRICE_ATOMIC=10000

# Ports
SELLER_PORT=4021
FACILITATOR_PORT=4022

# Buyer (holds the NEP-141 token; only signs off-chain)
BUYER_ACCOUNT_ID=<buyer>.testnet
BUYER_PRIVATE_KEY=ed25519:YYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYYY
